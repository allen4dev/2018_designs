.Hero
  background-image url('./../assets/home_hero_small.jpg')
  background-size cover
  background-position center
  background-repeat no-repeat
  height 85vh
  margin-top 15vh
  padding space-big 0
  display flex
  flex-direction column
  justify-content space-between
  align-items center

.Hero-heading
  text-align center
  text-transform uppercase

.Hero-title
  font-size main-heading
  margin-bottom space-small

.Hero-text
  font-weight bold

.Hero-actions
  width 60%
  text-transform uppercase
  display flex
  flex-direction column
  justify-content center
  align-items center

.Hero-button
  margin-bottom space-normal
  width 100%

.Hero-link
  text-align center
  text-decoration none
  width 100%

.LastNews
  background-color pink

.LastNews-heading
  text-align center

.LastNews-footer
  padding space-normal

.LastNews-button
  font-weight bold
  width 100%
  display block
  text-align center
  text-decoration none
  text-transform uppercase

.Explore
  background linear-gradient(to bottom, lightblue, white)
  position relative

.Explore::before
  content ""
  background-image url("./../assets/home_explore_big.jpg")
  background-repeat no-repeat
  background-size 100% 35vh
  position absolute
  top 0
  right 0
  bottom 0
  left 0

.Explore-heading
  padding-top 35vh
  text-align center

.Explore-text
  padding space-normal
  font-size font-normal
  line-height space-big
  text-align center

.Explore-footer
  padding space-normal 0
  text-align center

.Explore-button
  display inline-block
  text-decoration none

