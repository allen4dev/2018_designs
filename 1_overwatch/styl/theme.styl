// colors
blue = #01A5E2
darkblue = darken(blue, 70%)
black = #101010
gray = #CBCBCB
orange = #FF9C00
pink = #FBE7E9
purple = #D6D2E1
darkpurple = darken(purple, 50%)

// font-size
font-small = .8em
font-normal = 1em
font-medium = 1.2em
font-big = 1.5em
font-large = 2em
main-heading = 3em

// sizes
space-small = .5em
space-normal = 1em
space-medium = 1.5em
space-big = 2em

// z-index
z-header = 1000

button(fontSize, fontColor, bgColor)
  background-color bgColor
  border none
  color fontColor
  cursor pointer
  font-size fontSize
  font-weight bold
  padding space-small
