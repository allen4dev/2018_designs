.Header
  background-color darkblue
  height 15vh
  padding 0 space-normal
  display flex
  justify-content space-between
  align-items center
  position fixed
  top 0
  left 0
  right 0
  z-index z-header

.Logo
  flex-basis 15%
  max-width 50px

.NewsList
  padding space-normal
  display grid
  grid-template-rows 1fr 1fr 1fr
  grid-gap space-normal

.News-photo
  position relative

.News-description
  background-color rgba(0,0,0, .5)
  color white
  padding space-normal
  text-transform uppercase
  position absolute
  bottom 0
  left 0
  right 0


.CharacterList
  display grid
  grid-template-columns repeat(auto-fill, minmax(75px, 1fr))
  grid-gap space-normal
  padding space-big


.Character-photo
  background-color darkblue
  padding space-small
  border-radius 5px
  transform skew(-8deg)


.Footer
  background-color pink
  padding space-normal 0
  text-align center

.Footer > *:not(:last-child)
  margin-bottom space-normal

.Language
  background-color transparent
  border none
  color darkblue
  display inline-block
  font-size font-normal
  padding space-small space-normal

.Footer-logo
  margin auto
  width 40%

.Footer-list
  display flex
  flex-wrap wrap
  justify-content center

.Footer-item
  margin space-small

.Footer-link
  color darkblue
  display block
  text-decoration none
  text-transform uppercase

.Footer-copyright
  color darkblue


.HerosFilter
  margin-bottom space-normal
  display flex
  flex-wrap wrap

.HerosFilter-item
  display block
  flex 1

.HerosFilter-description
  display block
  margin-top space-small

.HerosFilter-link
  background-color alpha(pink, 50%)
  color darkblue
  padding space-normal space-small
  height 100%
  font-size .8em
  text-decoration none
  text-transform uppercase
  display flex
  flex-direction column
  justify-content center
  align-items center


.ChampionList
  padding space-small
  display grid
  grid-template-columns repeat(auto-fit, minmax(100px, 1fr))
  grid-gap space-small

.Champion
  border 2px solid pink

.Champion-photo
  position relative

.Champion-name
  background-color darkblue
  color gray
  font-size font-medium
  padding space-small
  text-align center
  position absolute
  bottom 0
  left 0
  right 0